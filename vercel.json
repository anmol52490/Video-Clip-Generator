{
  "version": 2,
  "builds": [
    {
      "src": "/api/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "100mb", "runtime": "python3.9" }
    },
    {
      "src": "/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
